{
  "name": "smart-account-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/smart-account-sdk/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/smart-account-sdk",
        "main": "packages/smart-account-sdk/src/index.ts",
        "tsConfig": "packages/smart-account-sdk/tsconfig.lib.json",
        "assets": ["packages/smart-account-sdk/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/smart-account-sdk"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/smart-account-sdk/**/*.{ts,js,cjs,mjs}",
          "packages/smart-account-sdk/package.json"
        ]
      }
    }
  }
}
